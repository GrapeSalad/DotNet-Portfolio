<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="//cdn.muicss.com/mui-0.9.21/css/mui.min.css" rel="stylesheet" type="text/css" />
    <script src="//cdn.muicss.com/mui-0.9.21/js/mui.min.js"></script>
    <script src="~/js/jquery-3.2.1.js"></script>
    <script src="~/js/scripts.js"></script>
    <link href="~/css/styles.css" rel="stylesheet" />
    <title>@ViewBag.Title</title>
</head>
<body>
    <div id="sidedrawer" class="mui--no-user-select">
        <div id="sidedrawer-brand" class="mui--appbar-line-height">
            <span class="mui--text-title">Stargazing</span>
        </div>
        <div class="mui-divider"></div>
        <ul>
            <li>
                <strong>This site</strong>
                <ul>
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                </ul>
            </li>
            <li>
                <strong>Projects</strong>
                <ul>
                    <li><a href="https://github.com/GrapeSalad/">Github (external site)</a></li>
                    <li>@Html.ActionLink("Github Stars", "GitStars", "Projects")</li>
                    <li>@Html.ActionLink("Digital-ease", "DigitalEase", "Projects")</li>
                </ul>
            </li>
            <li>
                <strong>Character</strong>
                <ul>
                    <li>@Html.ActionLink("Silly Stuff", "Index", "Interests")</li>
                    <li><a href="#">Item 2</a></li>
                    <li><a href="#">Item 3</a></li>
                </ul>
            </li>
        </ul>
    </div>
    <header id="header">
        <div class="mui-appbar mui--appbar-line-height">
            <div class="mui-container-fluid">
                <a class="sidedrawer-toggle mui--visible-xs-inline-block mui--visible-sm-inline-block js-show-sidedrawer">☰</a>
                <a class="sidedrawer-toggle mui--hidden-xs mui--hidden-sm js-hide-sidedrawer">☰</a>
                <span class="mui--text-title mui--visible-xs-inline-block">Stargazing!</span>
            </div>
        </div>
    </header>
    <div id="content-wrapper">
        @RenderBody()
    </div>
    <footer id="footer">
        <div class="mui-container-fluid">
            <br>
            <p>Made with ♥ by <a href="https://www.muicss.com">MUI</a></p>
            <img id="patrickGif" src="~/img/patrickGif.gif" height="160"/>
            <p>Built by <a href="https://github.com/GrapeSalad/">GrapeSalad</a></p>
        </div>
    </footer>
</body>
</html>
